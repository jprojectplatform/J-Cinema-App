<?xml version="1.0" encoding="utf-8"?>
<sg.bigo.ads.api.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inter_native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/inter_media_container"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <sg.bigo.ads.common.view.ViewFlow
            android:id="@+id/inter_media_ad_view_flow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"/>
        <sg.bigo.ads.common.view.Indicator
            android:id="@+id/vf_indicator"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>
        <sg.bigo.ads.common.view.RoundedFrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center_horizontal"
            android:id="@+id/inter_media_ad_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:radius="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/inter_media_ad_card_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <sg.bigo.ads.common.view.RoundedFrameLayout
                        android:id="@+id/icon_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        app:radius="12dp">
                        <ImageView
                            android:id="@+id/inter_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                    </sg.bigo.ads.common.view.RoundedFrameLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icon_layout"
                        android:layout_marginStart="20dp">
                        <TextView
                            android:textSize="21.5sp"
                            android:textColor="#ffffffff"
                            android:ellipsize="end"
                            android:id="@+id/inter_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bigo_ad_title_default"
                            android:maxLines="2"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="#ffffffff"
                            android:ellipsize="end"
                            android:id="@+id/inter_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/bigo_ad_description_default"
                            android:maxLines="1"/>
                        <ImageView
                            android:id="@+id/inter_star"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="9dp"
                            android:scaleType="fitStart"/>
                    </LinearLayout>
                </RelativeLayout>
                <sg.bigo.ads.common.view.RoundedFrameLayout
                    android:id="@+id/inter_btn_cta_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    app:radius="8dp">
                    <Button
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:ellipsize="end"
                        android:id="@+id/inter_btn_cta"
                        android:background="#33ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/bigo_ad_cta_default"
                        android:maxLines="1"
                        android:textAllCaps="false"/>
                </sg.bigo.ads.common.view.RoundedFrameLayout>
            </LinearLayout>
        </sg.bigo.ads.common.view.RoundedFrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/inter_media_ad_extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/bigo_ad_layout_interstitial_rich_video_multi_img_bottom"/>
        </LinearLayout>
    </LinearLayout>
</sg.bigo.ads.api.NativeAdView>
