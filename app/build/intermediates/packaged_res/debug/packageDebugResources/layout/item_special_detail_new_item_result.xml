<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/item_special_detail_new_item_result_0"
    android:background="@color/theme_bg_color"
    android:paddingTop="@dimen/dp_7"
    android:paddingBottom="@dimen/dp_7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_107"
        android:layout_marginLeft="@dimen/dp_12">
        <com.mgs.carparking.background.RoundedImageView
            android:id="@+id/item_img"
            android:tag="binding_1"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_107"
            android:src="@drawable/ic_video_default"
            android:scaleType="centerCrop"/>
        <ImageView
            android:tag="binding_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
        <View
            android:tag="binding_3"
            android:background="@drawable/bg_item_shadow_top_gradient"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            android:textColor="@color/color_0feb33"
            android:tag="binding_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:tag="binding_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_107"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_toRightOf="@+id/rl_left">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_13"
                android:textStyle="bold"
                android:textColor="@color/color_text_commen1"
                android:ellipsize="end"
                android:tag="binding_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:ellipsize="end"
                android:tag="binding_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:maxLines="1"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_666666"
                android:ellipsize="end"
                android:tag="binding_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:maxLines="2"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:ellipsize="end"
                android:tag="binding_9"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="@color/color_b0999999"
                android:id="@+id/tv_area"
                android:tag="binding_10"
                android:background="@drawable/bg_home_search_item_video_type"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_3"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="@color/color_b0999999"
                android:id="@+id/tv_year"
                android:tag="binding_11"
                android:background="@drawable/bg_home_search_item_video_type"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:background="#ff292929"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/rl_left"/>
</RelativeLayout>
