<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_home_content_list_0"
    android:background="@color/color_202023"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlPrimaryColor="@color/color_commen">
        <com.mgs.carparking.widgets.WaterDropHeader
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180">
                    <com.mgs.carparking.background.CardBanner
                        android:id="@+id/homeCardBanner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_180"/>
                    <com.mgs.carparking.util.DotView
                        android:id="@+id/dotView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:text="@string/text_home_hot"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_list"
                        android:tag="binding_1"
                        android:paddingLeft="@dimen/dp_9"
                        android:paddingRight="@dimen/dp_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    <RelativeLayout
        android:tag="binding_2"
        android:background="@color/color_202023"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_150"
            android:text="@string/text_load_empty"
            android:drawableTop="@drawable/ic_load_empty"
            android:drawablePadding="@dimen/dp_33"
            android:layout_centerHorizontal="true"/>
        <Button
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_text_commen1"
            android:gravity="center"
            android:tag="binding_3"
            android:background="@drawable/bg_empty_refresh"
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_19"
            android:text="@string/text_load_empty_word"
            android:layout_below="@+id/tv_empty"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:tag="binding_4"
        android:background="@color/color_202023"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_loading"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/ic_is_loading"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/text_is_load"
            android:layout_toRightOf="@+id/img_loading"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
