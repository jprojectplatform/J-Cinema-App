<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/activity_order_list_0"
    android:background="@color/theme_bg_color"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_back"/>
    <androidx.recyclerview.widget.RecyclerView
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_666666"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_150"
        android:text="@string/text_empty"
        android:drawableTop="@drawable/ic_search_empty"
        android:layout_centerInParent="true"/>
    <RelativeLayout
        android:tag="binding_3"
        android:background="@color/theme_bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999999"
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_150"
            android:text="@string/text_load_empty"
            android:drawableTop="@drawable/ic_load_empty"
            android:drawablePadding="@dimen/dp_33"
            android:layout_centerHorizontal="true"/>
        <Button
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_text_commen1"
            android:gravity="center"
            android:tag="binding_4"
            android:background="@drawable/bg_empty_refresh"
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_19"
            android:text="@string/text_load_empty_word"
            android:layout_below="@+id/tv_empty"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"/>
    </RelativeLayout>
</LinearLayout>
