<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ia_close_rewarded_dialog_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="22sp"
        android:textColor="@color/ia_close_rewarded_title_color"
        android:ellipsize="end"
        android:layout_gravity="start"
        android:id="@+id/ia_skip_dialog_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/ia_skip_rewarded_dialog_title"
        android:maxLines="1"/>
    <TextView
        android:textSize="18sp"
        android:textColor="@color/ia_close_rewarded_sub_title_color"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ia_skip_dialog_sub_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/ia_skip_rewarded_dialog_sub_title"/>
    <LinearLayout
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp">
        <Button
            android:textStyle="bold"
            android:textColor="@color/ia_close_rewarded_button_color"
            android:ellipsize="end"
            android:id="@+id/ia_close_button"
            android:background="@color/ia_close_rewarded_button_background_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="@string/ia_skip_rewarded_dialog_close_button"
            android:maxLines="1"
            android:textAllCaps="false"/>
        <Button
            android:textStyle="bold"
            android:textColor="@color/ia_close_rewarded_button_color"
            android:ellipsize="end"
            android:id="@+id/ia_keep_watching_button"
            android:background="@color/ia_close_rewarded_button_background_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ia_skip_rewarded_dialog_keep_watching"
            android:maxLines="1"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
