<?xml version="1.0" encoding="utf-8"?>
<sg.bigo.ads.api.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inter_native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/inter_media_container"
        android:background="#7fffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="13sp"
            android:textColor="#c7999999"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/inter_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="20dp"
            android:text=""
            android:maxLines="2"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"/>
        <RelativeLayout
            android:id="@+id/media_container_wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_above="@+id/inter_warning"
            android:layout_centerInParent="true">
            <sg.bigo.ads.common.view.RoundedFrameLayout
                android:id="@+id/media_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:radius="8dp">
                <sg.bigo.ads.api.MediaView
                    android:id="@+id/inter_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </sg.bigo.ads.common.view.RoundedFrameLayout>
            <FrameLayout
                android:id="@+id/inter_ad_info"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/media_container"
                android:layout_alignBottom="@+id/media_container"
                android:layout_alignEnd="@+id/media_container">
                <FrameLayout
                    android:id="@+id/inter_ad_info_card_right_bottom"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content">
                    <sg.bigo.ads.common.view.RoundedFrameLayout
                        android:layout_gravity="right"
                        android:id="@+id/inter_ad_info_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:radius="12dp">
                        <sg.bigo.ads.common.view.RealtimeBlurLinearLayout
                            android:id="@+id/ad_info_card_background"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:id="@+id/ad_info_layout"
                                    android:paddingRight="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minWidth="200dp"
                                    android:paddingStart="12dp">
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:paddingTop="12dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <sg.bigo.ads.common.view.RoundedFrameLayout
                                            android:id="@+id/icon_layout"
                                            android:layout_width="72dp"
                                            android:layout_height="72dp"
                                            app:radius="8dp">
                                            <ImageView
                                                android:id="@+id/inter_icon"
                                                android:layout_width="72dp"
                                                android:layout_height="72dp"/>
                                        </sg.bigo.ads.common.view.RoundedFrameLayout>
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:textSize="21sp"
                                                android:textColor="#ffffffff"
                                                android:ellipsize="end"
                                                android:id="@+id/inter_title"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="8dp"
                                                android:text="@string/bigo_ad_title_default"
                                                android:maxLines="2"
                                                android:fontFamily="sans-serif-medium"
                                                android:layout_marginStart="8dp"/>
                                            <TextView
                                                android:textSize="12sp"
                                                android:textColor="#ffffffff"
                                                android:ellipsize="end"
                                                android:id="@+id/inter_description"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="8dp"
                                                android:layout_marginTop="2dp"
                                                android:text="@string/bigo_ad_description_default"
                                                android:maxLines="2"
                                                android:layout_marginStart="8dp"/>
                                            <ImageView
                                                android:id="@+id/inter_star"
                                                android:visibility="gone"
                                                android:layout_width="match_parent"
                                                android:layout_height="16dp"
                                                android:layout_marginLeft="8dp"
                                                android:layout_marginTop="8dp"
                                                android:scaleType="fitStart"
                                                android:layout_marginStart="8dp"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                                <sg.bigo.ads.common.view.RoundedFrameLayout
                                    android:id="@+id/inter_btn_cta_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_margin="12dp"
                                    android:layout_below="@+id/ad_info_layout"
                                    android:layout_alignLeft="@+id/ad_info_layout"
                                    android:layout_alignRight="@+id/ad_info_layout"
                                    app:radius="6dp">
                                    <Button
                                        android:textSize="14sp"
                                        android:textColor="@android:color/white"
                                        android:ellipsize="end"
                                        android:id="@+id/inter_btn_cta"
                                        android:background="@drawable/bigo_ad_button_bg_rectangle_blue"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:text="@string/bigo_ad_cta_default"
                                        android:maxLines="1"
                                        android:textAllCaps="false"/>
                                </sg.bigo.ads.common.view.RoundedFrameLayout>
                            </RelativeLayout>
                        </sg.bigo.ads.common.view.RealtimeBlurLinearLayout>
                    </sg.bigo.ads.common.view.RoundedFrameLayout>
                </FrameLayout>
            </FrameLayout>
        </RelativeLayout>
        <sg.bigo.ads.api.AdOptionsView
            android:id="@+id/inter_options"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginRight="9.5dp"
            android:layout_marginBottom="9.5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="9.5dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#ffe9ebec"
            android:ellipsize="end"
            android:id="@+id/inter_advertiser"
            android:background="@drawable/bigo_advertiser_background"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="15dp"
            android:maxWidth="240dp"
            android:text="bigoad.com"
            android:maxLines="1"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"/>
        <TextView
            android:textSize="9sp"
            android:textColor="#ccffffff"
            android:gravity="center"
            android:id="@+id/inter_ad_label"
            android:background="@drawable/bigo_adtag_background"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.5dp"
            android:layout_marginBottom="9dp"
            android:text="@string/ad"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10.5dp"/>
        <Button
            android:id="@+id/inter_btn_mute"
            android:background="@drawable/bigo_ad_ic_media_mute"
            android:visibility="invisible"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"/>
    </RelativeLayout>
</sg.bigo.ads.api.NativeAdView>
