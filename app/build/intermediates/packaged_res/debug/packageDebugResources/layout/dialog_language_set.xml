<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginHorizontal="@dimen/dp_30">
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_text_commen1"
            android:gravity="center"
            android:background="@drawable/bg_set_language_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:text="App Language"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/bg_set_language_bot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59">
            <TextView
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_commen"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_cancel"
                android:background="@drawable/bg_set_language_bt"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:text="@string/text_cannel"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/dp_14"
                android:paddingVertical="@dimen/dp_6"/>
            <TextView
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_setlanguage_save"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_save"
                android:background="@drawable/bg_set_language_save_bt"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:text="@string/str_save"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/dp_14"
                android:paddingVertical="@dimen/dp_6"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
