<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@drawable/ic_video_load_first_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="@dimen/dp_176"
        android:layout_height="@dimen/dp_43"
        android:src="@drawable/ic_video_load_first_icon"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/exo_load_first"
        android:background="@drawable/video_load_animation"
        android:layout_width="@dimen/dp_207"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_below="@+id/iv1"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/exo_exo_video_switch_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/str_string_loading"
        android:layout_below="@+id/exo_load_first"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
