<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/layout_contain_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <sg.bigo.ads.api.MediaView
            android:layout_gravity="center"
            android:id="@+id/splash_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:background="@drawable/bigo_ad_splash_header_bg"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/splash_btn_skip">
                <ImageView
                    android:id="@+id/splash_icon"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#ff333333"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/splash_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <include layout="@layout/bigo_ad_splash_item_cta"/>
        <include layout="@layout/bigo_ad_splash_ad_label"/>
        <sg.bigo.ads.api.AdOptionsView
            android:layout_gravity="end|bottom"
            android:id="@+id/splash_options"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
    </FrameLayout>
    <sg.bigo.ads.ad.interstitial.AdCountDownButton
        android:layout_gravity="top|right"
        android:id="@+id/splash_btn_skip"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        app:customLayout="@layout/bigo_ad_item_splash_countdown_bg"/>
</FrameLayout>
