<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/main_pgl_native_content_ly"
        android:background="#ffffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/icon_source_layout"
            android:background="#fff4f5f7"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <ImageView
                android:id="@+id/main_pgl_native_im_icon"
                android:layout_width="@dimen/dp_30"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/main_pgl_tt_ad_logo"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/main_plg_native_im_dislike"
                android:focusable="true"
                android:visibility="visible"
                android:clickable="true"
                android:layout_width="@dimen/dp_20"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/main_ico_close"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:id="@+id/main_pgl_native_tv_ad_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_3"
            android:text="pangle"
            android:maxLines="2"
            android:singleLine="false"
            android:layout_below="@+id/icon_source_layout"
            android:lineSpacingMultiplier="1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"/>
        <FrameLayout
            android:id="@+id/main_pgl_native_fl_video"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:layout_below="@+id/main_pgl_native_tv_ad_desc"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"/>
        <RelativeLayout
            android:id="@+id/ad_title_creative_btn_layout"
            android:background="#fff4f5f7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_below="@+id/main_pgl_native_fl_video"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10">
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/main_pgl_native_rl_ad_logo"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/main_pgl_tv_ad_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="this is title....."
                android:singleLine="true"
                android:maxLength="14"
                android:layout_toLeftOf="@+id/main_pgl_native_btn_creative"
                android:layout_toRightOf="@+id/main_pgl_native_rl_ad_logo"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toStartOf="@+id/main_pgl_native_btn_creative"
                android:layout_toEndOf="@+id/main_pgl_native_rl_ad_logo"/>
            <Button
                android:textSize="@dimen/sp_11"
                android:textColor="#ffb22222"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/main_pgl_native_btn_creative"
                android:background="@drawable/main_pgl_btn_bg_creative"
                android:padding="@dimen/dp_3"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_8"
                android:text="pangle"
                android:lines="1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
