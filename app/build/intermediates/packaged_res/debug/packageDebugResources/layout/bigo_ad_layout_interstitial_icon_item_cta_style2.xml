<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <sg.bigo.ads.common.view.RoundedFrameLayout
        android:id="@+id/icon_ads_icon_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:radius="8dp">
        <ImageView
            android:id="@+id/icon_ads_item_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </sg.bigo.ads.common.view.RoundedFrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp">
        <TextView
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:id="@+id/icon_ads_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BIGO LIVE"
            android:maxLines="1"/>
        <Button
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:id="@+id/icon_ads_item_btn_cta"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="6dp"
            android:text="Install"
            android:maxLines="1"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
