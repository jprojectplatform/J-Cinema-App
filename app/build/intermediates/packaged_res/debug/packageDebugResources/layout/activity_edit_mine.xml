<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/activity_edit_mine_0"
    android:background="@color/theme_bg_color"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_back"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:tag="binding_1"
        android:paddingLeft="@dimen/dp_9"
        android:paddingRight="@dimen/dp_9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_text_commen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/str_header"
            android:layout_centerVertical="true"/>
        <com.mgs.carparking.widgets.CircularImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/iv_image"
            android:tag="binding_2"
            android:layout_width="@dimen/dp_31"
            android:layout_height="@dimen/dp_31"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mine_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:background="@color/color_actionbar_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_9"
        android:paddingRight="@dimen/dp_9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_57">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_text_commen1"
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_nickname"
            android:layout_centerVertical="true"/>
        <com.mgs.carparking.widgets.ClearableEditText
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_text_commen1"
            android:textColorHint="@color/color_999999"
            android:gravity="center_vertical"
            android:id="@+id/ed_nickname"
            android:tag="binding_3"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginRight="@dimen/dp_20"
            android:hint="@string/str_nickname_write"
            android:singleLine="true"
            android:maxLength="10"
            android:layout_toRightOf="@+id/tv_1"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/search_color_cursor"/>
    </RelativeLayout>
    <View
        android:background="@color/color_actionbar_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:tag="binding_4"
        android:paddingLeft="@dimen/dp_9"
        android:paddingRight="@dimen/dp_9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_57">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_text_commen1"
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_sex"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_text_commen1"
            android:textColorHint="@color/color_999999"
            android:tag="binding_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginRight="@dimen/dp_20"
            android:hint="@string/str_sex_select"
            android:layout_toRightOf="@+id/tv_2"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mine_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:background="@color/color_actionbar_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_9"
        android:paddingRight="@dimen/dp_9"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_57">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_text_commen1"
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tel"
            android:layout_centerVertical="true"/>
        <com.mgs.carparking.widgets.ClearableEditText
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_text_commen1"
            android:textColorHint="@color/color_999999"
            android:gravity="center_vertical"
            android:id="@+id/et_phone"
            android:tag="binding_6"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:hint="tel"
            android:singleLine="true"
            android:maxLength="11"
            android:layout_toRightOf="@+id/tv_3"
            android:layout_centerVertical="true"
            android:inputType="phone"
            android:textCursorDrawable="@drawable/search_color_cursor"/>
    </RelativeLayout>
    <View
        android:background="@color/color_actionbar_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_9"
        android:paddingRight="@dimen/dp_9"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_57">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_text_commen1"
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_signs"
            android:layout_centerVertical="true"/>
        <com.mgs.carparking.widgets.ClearableEditText
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:textColorHint="@color/color_999999"
            android:gravity="center_vertical"
            android:id="@+id/et_autograph"
            android:tag="binding_7"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginRight="@dimen/dp_20"
            android:hint="@string/str_userinfo"
            android:singleLine="true"
            android:maxLength="15"
            android:layout_toRightOf="@+id/tv_4"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/search_color_cursor"/>
    </RelativeLayout>
    <View
        android:background="@color/color_actionbar_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>
</LinearLayout>
