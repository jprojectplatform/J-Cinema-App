<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_home_content_multiple_list_item_new_0"
    android:background="@color/theme_bg_color"
    android:paddingBottom="@dimen/dp_15"
    android:layout_width="@dimen/dp_110"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_156">
        <com.mgs.carparking.background.RoundedImageView
            android:id="@+id/item_img"
            android:tag="binding_1"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_156"
            android:scaleType="centerCrop"/>
        <ImageView
            android:tag="binding_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/is_update"
                android:tag="binding_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item_home_update"/>
            <com.ruffian.library.widget.RTextView
                android:textSize="12sp"
                android:textColor="@color/black"
                android:tag="binding_4"
                android:paddingLeft="@dimen/dp_3"
                android:paddingTop="@dimen/dp_1"
                android:paddingRight="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_alignParentLeft="true"
                android:paddingHorizontal="@dimen/dp_3"
                android:paddingVertical="@dimen/dp_1"
                app:background_normal="@color/color_37A0FC"
                app:layout_constraintTop_toBottomOf="@+id/is_update"
                app:layout_goneMarginTop="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:tag="binding_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_home_content_cam"
            android:layout_alignParentRight="true"/>
        <View
            android:tag="binding_6"
            android:background="@drawable/bg_item_shadow_top_gradient"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textStyle="bold"
            android:textColor="@color/color_0feb33"
            android:tag="binding_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:tag="binding_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_999999"
        android:ellipsize="end"
        android:tag="binding_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:maxLines="1"/>
</LinearLayout>
