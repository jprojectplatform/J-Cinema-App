<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="13sp"
        android:textColor="#ffffffff"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:id="@+id/inter_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:maxLines="2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/inter_media_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/inter_media_bottom_left"
            android:background="@drawable/bigo_multi_img_advertiser_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp">
            <TextView
                android:textSize="9sp"
                android:textColor="#ffffffff"
                android:ellipsize="end"
                android:id="@+id/inter_advertiser"
                android:paddingLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="240dp"
                android:text="bigoad.com"
                android:maxLines="1"/>
            <TextView
                android:textSize="9sp"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:id="@+id/inter_ad_label"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:paddingRight="3dp"
                android:paddingBottom="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ad"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <sg.bigo.ads.api.AdOptionsView
            android:id="@+id/inter_options"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</merge>
