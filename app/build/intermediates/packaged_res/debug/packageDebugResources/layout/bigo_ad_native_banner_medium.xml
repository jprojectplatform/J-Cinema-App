<?xml version="1.0" encoding="utf-8"?>
<sg.bigo.ads.common.view.RoundedFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:id="@+id/inter_native_ad_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:radius="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:background="#fff5f8fa"
        android:layout_width="300dp"
        android:layout_height="250dp">
        <sg.bigo.ads.api.AdOptionsView
            android:layout_gravity="top|right"
            android:id="@+id/inter_options"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"/>
        <sg.bigo.ads.common.view.RoundedFrameLayout
            android:layout_gravity="center"
            android:id="@+id/inter_media_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            app:radius="4dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <sg.bigo.ads.common.view.RoundedFrameLayout
                android:layout_gravity="center"
                android:id="@+id/icon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                app:radius="4dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp">
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ff202124"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/inter_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="#99202124"
                    android:ellipsize="end"
                    android:id="@+id/inter_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="9sp"
                        android:textColor="#b3ffffff"
                        android:id="@+id/inter_ad_label"
                        android:background="@drawable/bigo_banner_adtag_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ad"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"/>
                    <TextView
                        android:textSize="9sp"
                        android:textColor="#33202124"
                        android:ellipsize="end"
                        android:id="@+id/inter_advertiser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>
            <sg.bigo.ads.common.view.RoundedFrameLayout
                android:layout_gravity="center"
                android:id="@+id/inter_btn_cta_layout"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:layout_marginEnd="12dp"
                app:radius="4dp">
                <Button
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:id="@+id/inter_btn_cta"
                    android:background="@drawable/bigo_ad_banner_button_bg_rectangle_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Install now"
                    android:maxLines="1"
                    android:textAllCaps="false"/>
            </sg.bigo.ads.common.view.RoundedFrameLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/click_guide_contain"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/click_guide_layer"
            android:background="#ff000000"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:alpha="0.3"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/click_img"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/bigo_ad_banner_clickguide"
            android:translationX="-57dp"/>
    </FrameLayout>
</sg.bigo.ads.common.view.RoundedFrameLayout>
