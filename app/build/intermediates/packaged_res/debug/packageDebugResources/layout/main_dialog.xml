<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="18sp"
        android:textColor="@color/main_black"
        android:id="@+id/main_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/main_gray"
        android:id="@+id/main_txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/main_txt_title"
        android:layout_centerHorizontal="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/main_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#22000000"
        android:layout_alignParentBottom="true"
        android:showDividers="middle">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/main_black"
            android:gravity="center"
            android:id="@+id/main_txt_no"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_weight="1"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/main_black"
            android:gravity="center"
            android:id="@+id/main_txt_yes"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:background="#22000000"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/main_layout_bottom"/>
</RelativeLayout>
