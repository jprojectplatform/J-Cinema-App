<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_click_guide"
    android:background="#cc000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/click_guide_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <sg.bigo.ads.common.view.RoundedFrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/icon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:radius="22dp">
                <ImageView
                    android:id="@+id/inter_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            </sg.bigo.ads.common.view.RoundedFrameLayout>
            <TextView
                android:textSize="15sp"
                android:textColor="#ffffffff"
                android:id="@+id/tv_slide_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="76dp"
                android:layout_marginBottom="20dp"
                android:text="Slide View"
                android:shadowColor="#66000000"
                android:shadowDy="0.5"
                android:shadowRadius="1"
                android:layout_above="@+id/iv_slide_view"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"/>
            <ImageView
                android:id="@+id/iv_slide_view"
                android:background="@drawable/bigo_ad_landscape_slide_view"
                android:layout_width="28dp"
                android:layout_height="22.5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
        <View
            android:id="@+id/layout_mask"
            android:layout_width="75dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/click_guide"
            android:layout_width="115dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="-120dp"
            android:src="@drawable/bigo_ad_click_guide_landscape"
            android:layout_alignLeft="@+id/layout_mask"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
</RelativeLayout>
