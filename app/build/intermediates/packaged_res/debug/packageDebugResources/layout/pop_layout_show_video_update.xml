<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rl_content"
        android:background="@drawable/bg_show_feedback_once"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_325"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:src="@drawable/ic_video_reward_free_top"
            android:scaleType="fitXY"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_text_commen1"
            android:gravity="left"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/str_update_txt"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_sure"
            android:background="@drawable/bg_home_search_item_video_play"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/str_update_bt1"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="@color/color_999999"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_cancel"
            android:background="@drawable/bg_common_button_grey"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/str_update_bt2"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
</RelativeLayout>
