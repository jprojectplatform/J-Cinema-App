<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_video_commit_list_0"
    android:background="@color/theme_bg_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_23">
        <com.mgs.carparking.widgets.CircularImageView
            android:id="@+id/iv_lord_head"
            android:tag="binding_1"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            android:textColor="@color/color_text_commen1"
            android:id="@+id/tv_lord_name"
            android:tag="binding_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/iv_lord_head"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999999"
            android:tag="binding_3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@+id/iv_lord_head"
            android:layout_below="@+id/tv_lord_name"/>
        <RelativeLayout
            android:id="@+id/rl_filter"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_10"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_video_commit_filter"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_good"
            android:tag="binding_4"
            android:paddingRight="@dimen/dp_5"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rl_filter">
            <ImageView
                android:tag="binding_5"
                android:paddingRight="@dimen/dp_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:id="@+id/tv_good"
                android:tag="binding_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:tag="binding_7"
            android:paddingLeft="@dimen/dp_10"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/rl_filter">
            <ImageView
                android:paddingRight="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@drawable/ic_video_commit_message"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:tag="binding_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <com.green.hand.library.widget.EmojiTextview
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_text_commen1"
        android:tag="binding_9"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_8"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_999999"
        android:gravity="center"
        android:tag="binding_10"
        android:background="@drawable/bg_video_detail_filter"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_52"
        android:text="回复"/>
    <RelativeLayout
        android:tag="binding_11"
        android:background="@drawable/bg_video_comment_second_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_9">
        <com.mgs.carparking.glide.ChildRecycleView
            android:tag="binding_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="@color/color_home_but_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_19"/>
</LinearLayout>
