<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/activity_register_0"
    android:background="@color/theme_bg_color"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_back"/>
    <com.mgs.carparking.widgets.ClearableEditText
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_text_commen1"
        android:textColorHighlight="@color/translate_white"
        android:textColorHint="@color/color_999999"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:id="@+id/et_username"
        android:tag="binding_1"
        android:background="@drawable/shape_login_edit"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="@dimen/dp_308"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_31"
        android:hint="@string/text_register_username"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:maxLength="20"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:layout_centerInParent="true"
        android:textCursorDrawable="@drawable/search_color_cursor"/>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_6"
        android:text="@string/text_register_rule"/>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dp_308"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_15">
        <EditText
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_text_commen1"
            android:textColorHint="@color/color_999999"
            android:id="@+id/et_password"
            android:tag="binding_2"
            android:background="@drawable/shape_login_edit"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="@dimen/dp_308"
            android:layout_height="@dimen/dp_42"
            android:hint="@string/text_register_password"
            android:maxLength="20"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/search_color_cursor"/>
        <ImageView
            android:id="@+id/iv_password"
            android:tag="binding_3"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_login_password_hint"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_6"
        android:text="@string/text_register_rule"/>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dp_308"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_15">
        <EditText
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_text_commen1"
            android:textColorHint="@color/color_999999"
            android:id="@+id/et_password_repeat"
            android:tag="binding_4"
            android:background="@drawable/shape_login_edit"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="@dimen/dp_308"
            android:layout_height="@dimen/dp_42"
            android:hint="@string/text_register_password_repeat"
            android:maxLength="20"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/search_color_cursor"/>
        <ImageView
            android:id="@+id/iv_password_repeat"
            android:tag="binding_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_login_password_hint"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_6"
        android:text="@string/text_register_rule"/>
    <Button
        android:enabled="false"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        android:textColor="@color/color_text_commen1"
        android:layout_gravity="center_horizontal"
        android:id="@+id/bt_submit"
        android:tag="binding_6"
        android:background="@drawable/shape_login_submit_no_click"
        android:layout_width="@dimen/dp_308"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_26"
        android:text="@string/text_register_register"
        android:textAllCaps="false"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_commen"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:tag="binding_7"
        android:padding="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:text="@string/text_register_login"/>
</LinearLayout>
