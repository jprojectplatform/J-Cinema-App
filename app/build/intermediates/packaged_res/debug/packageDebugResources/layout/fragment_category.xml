<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/fragment_category_0"
    android:background="@color/theme_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_top"
        android:background="@drawable/bg_home_top_gradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_77"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35">
        <com.google.android.material.tabs.TabLayout
            android:layout_gravity="center"
            android:id="@+id/tab_layout"
            android:background="@null"
            android:paddingBottom="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            app:tabGravity="center"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/color_text_light_5"
            app:tabTextColor="@color/color_white60"/>
        <RelativeLayout
            android:tag="binding_1"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:background="@drawable/bg_channel_search_oval"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_video_search"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.mgs.carparking.glide.SuperViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_top"/>
</RelativeLayout>
