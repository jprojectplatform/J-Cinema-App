<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_click_guide"
    android:background="#b3000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/click_guide_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <sg.bigo.ads.common.view.RoundedFrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            app:radius="6dp">
            <ImageView
                android:id="@+id/inter_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </sg.bigo.ads.common.view.RoundedFrameLayout>
        <Button
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:id="@+id/inter_btn_cta"
            android:background="@drawable/bigo_ad_button_bg_rectangle_blue"
            android:layout_width="169dp"
            android:layout_height="43.5dp"
            android:text="@string/bigo_ad_cta_default"
            android:maxLines="1"
            android:layout_below="@+id/icon_layout"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:stateListAnimator="@null"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:layout_below="@+id/inter_btn_cta"
            android:layout_marginStart="-50dp"
            android:layout_toEndOf="@+id/inter_btn_cta">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/click_guide"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bigo_ad_click_guide"/>
            <View
                android:layout_gravity="center"
                android:id="@+id/click_ripple"
                android:background="@drawable/bigo_ad_click_ripple"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="25dp"/>
        </RelativeLayout>
        <View
            android:id="@+id/icons_center_anchor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/inter_btn_cta"/>
    </RelativeLayout>
    <View
        android:id="@+id/icons_bottom_anchor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/click_guide_container"/>
</RelativeLayout>
