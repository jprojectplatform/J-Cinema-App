<?xml version="1.0" encoding="utf-8"?>
<sg.bigo.ads.api.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inter_native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/inter_media_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="13sp"
            android:textColor="#c7999999"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/inter_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="20dp"
            android:text=""
            android:maxLines="2"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"/>
        <FrameLayout
            android:id="@+id/layout_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/inter_warning">
            <sg.bigo.ads.common.view.RoundedFrameLayout
                android:layout_gravity="center"
                android:id="@+id/media_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:radius="8dp">
                <sg.bigo.ads.api.MediaView
                    android:id="@+id/inter_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </sg.bigo.ads.common.view.RoundedFrameLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/inter_description"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/inter_ad_info"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <sg.bigo.ads.common.view.RoundedFrameLayout
                android:id="@+id/inter_ad_info_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@drawable/bigo_ad_interstitial_landscape_ad_info_bg"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp">
                    <sg.bigo.ads.common.view.RoundedFrameLayout
                        android:id="@+id/icon_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        app:radius="8dp">
                        <ImageView
                            android:id="@+id/inter_icon"
                            android:layout_width="44dp"
                            android:layout_height="44dp"/>
                    </sg.bigo.ads.common.view.RoundedFrameLayout>
                    <TextView
                        android:textSize="21sp"
                        android:textColor="#ffffffff"
                        android:ellipsize="end"
                        android:id="@+id/inter_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="100dp"
                        android:text="@string/bigo_ad_title_default"
                        android:lines="1"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="100dp"/>
                </LinearLayout>
            </sg.bigo.ads.common.view.RoundedFrameLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignBottom="@+id/layout_mask"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true">
            <sg.bigo.ads.common.view.RoundedFrameLayout
                android:id="@+id/inter_btn_cta_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:radius="6dp">
                <Button
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:ellipsize="end"
                    android:id="@+id/inter_btn_cta"
                    android:background="@drawable/bigo_ad_button_bg_rectangle_blue"
                    android:layout_width="120dp"
                    android:layout_height="44dp"
                    android:text="@string/bigo_ad_cta_default"
                    android:maxLines="1"
                    android:textAllCaps="false"/>
            </sg.bigo.ads.common.view.RoundedFrameLayout>
        </FrameLayout>
        <Button
            android:id="@+id/inter_btn_mute"
            android:background="@drawable/bigo_ad_ic_media_mute"
            android:visibility="invisible"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"/>
        <sg.bigo.ads.api.AdOptionsView
            android:id="@+id/inter_options"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginRight="9.5dp"
            android:layout_marginBottom="9dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="9.5dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#ffe9ebec"
            android:ellipsize="end"
            android:id="@+id/inter_advertiser"
            android:background="@drawable/bigo_advertiser_background"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="15dp"
            android:maxWidth="240dp"
            android:text="bigoad.com"
            android:maxLines="1"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"/>
        <TextView
            android:textSize="9sp"
            android:textColor="#ccffffff"
            android:gravity="center"
            android:id="@+id/inter_ad_label"
            android:background="@drawable/bigo_adtag_background"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.5dp"
            android:layout_marginBottom="9dp"
            android:text="@string/ad"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10.5dp"/>
    </RelativeLayout>
</sg.bigo.ads.api.NativeAdView>
