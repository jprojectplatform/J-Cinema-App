<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/activity_search_video_0"
    android:background="@color/theme_bg_color"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="@dimen/dp_9"
        android:paddingRight="@dimen/dp_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_14">
        <com.mgs.carparking.widgets.ClearableEditText
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_text_commen1"
            android:textColorHighlight="@color/color_text_commen1"
            android:textColorHint="@color/color_999999"
            android:gravity="center_vertical"
            android:id="@+id/et_search"
            android:tag="binding_1"
            android:background="@drawable/shape_search_edit"
            android:paddingLeft="14dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="@dimen/dp_268"
            android:layout_height="@dimen/dp_31"
            android:hint="@string/text_home_search_content"
            android:singleLine="true"
            android:selectAllOnFocus="true"
            android:drawableLeft="@drawable/ic_home_search"
            android:drawablePadding="@dimen/sp_10"
            android:imeOptions="actionSearch"
            android:textCursorDrawable="@drawable/search_color_cursor"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_text_commen1"
            android:gravity="center"
            android:tag="binding_2"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_31"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_search_result"
        android:tag="binding_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.tabs.TabLayout
            android:textSize="@dimen/sp_13"
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_9"
            android:textAllCaps="false"
            app:tabBackground="@drawable/tab_background"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/color_text_commen1"
            app:tabIndicatorHeight="0dp"
            app:tabMinWidth="@dimen/dp_68"
            app:tabMode="scrollable"
            app:tabPaddingEnd="@dimen/dp_9"
            app:tabPaddingStart="@dimen/dp_9"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/color_text_commen1"
            app:tabTextColor="@color/color_white60"
            style="@style/Base.Widget.Design.TabLayout3"/>
        <View
            android:background="@color/color_actionbar_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_8"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <ScrollView
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:tag="binding_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:tag="binding_5"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:tag="binding_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_666666"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="@string/str_search_no_association"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:tag="binding_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:tag="binding_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:tag="binding_9"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_14">
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="@color/color_999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_home_videosearch_search_history"/>
                    <ImageView
                        android:tag="binding_10"
                        android:paddingLeft="@dimen/dp_9"
                        android:paddingRight="@dimen/dp_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_search_delete"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <com.mgs.carparking.widgets.FlowLayout2
                    android:id="@+id/fl_search_history"
                    android:tag="binding_11"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.mgs.carparking.widgets.MaxLayout
                    android:layout_gravity="center"
                    android:id="@+id/layout_adView"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    app:ml_maxheight="@dimen/dp_196"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="@color/color_999999"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_23"
                    android:text="@string/text_home_videosearch_search_hot"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:tag="binding_12"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
