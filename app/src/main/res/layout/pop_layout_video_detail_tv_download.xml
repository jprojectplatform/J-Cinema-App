<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_view"
    android:background="@color/theme_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:paddingLeft="@dimen/dp_9"
        android:paddingRight="@dimen/dp_9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_name"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_home_video_detail_open_download_title1"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/color_FF3939"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_home_video_detail_open_download_title2"
            android:layout_toRightOf="@+id/tv_name"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_video_down"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_sort"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_centerVertical="true">
            <TextView
                android:enabled="true"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_999999"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_reverse_order"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_video_sort"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:background="@color/color_home_but_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/rl_top"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:paddingLeft="@dimen/dp_9"
        android:paddingRight="@dimen/dp_9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_80"
        android:layout_below="@+id/view"/>
    <RelativeLayout
        android:gravity="center"
        android:background="@color/theme_bg_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_26"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="@color/color_666666"
            android:id="@+id/tv_already_used"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.3Gï¼Œ"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="@color/color_666666"
            android:id="@+id/tv_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.4G"
            android:layout_toRightOf="@+id/tv_already_used"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/rl_open_cache"
        android:background="@color/color_home_but_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginBottom="@dimen/dp_26"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_text_commen1"
            android:gravity="center"
            android:id="@+id/tv_open_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_home_video_detail_open_download"
            android:drawableLeft="@drawable/ic_video_open_cache"
            android:drawableRight="@drawable/ic_home_right"
            android:drawablePadding="@dimen/dp_7"/>
    </RelativeLayout>
</RelativeLayout>
