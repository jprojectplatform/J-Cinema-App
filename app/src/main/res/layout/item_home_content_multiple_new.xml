<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_home_content_multiple_new_0"
    android:background="@color/theme_bg_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/color_text_commen1"
            android:id="@+id/tv_title"
            android:tag="binding_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_2"
            android:src="@drawable/ic_home_right"
            android:layout_toRightOf="@+id/tv_title"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:tag="binding_2"
        android:paddingLeft="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_12">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:tag="binding_3"
            android:background="@drawable/bg_home_item_change"
            android:layout_width="@dimen/dp_165"
            android:layout_height="@dimen/dp_36">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_item_change_more"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_text_commen1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="@string/text_bt_more"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:tag="binding_4"
            android:background="@drawable/bg_home_item_change"
            android:layout_width="@dimen/dp_165"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_item_change_other"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_text_commen1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="@string/text_bt_change"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
