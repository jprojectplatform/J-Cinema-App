<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout_detail"
    android:background="#ffffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/main_img_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/main_layout_content"
        android:background="#f0ffffff"
        android:padding="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/main_img_detail_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/main_black"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/main_txt_detail_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:maxLines="3"/>
        <TextView
            android:textSize="15sp"
            android:textColor="#ff797979"
            android:ellipsize="end"
            android:id="@+id/main_txt_detail_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:maxLines="2"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/main_btn_detail_download"
            android:background="@drawable/main_bg_download_radius"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/main_downLoad_now"
            android:lineSpacingMultiplier="0.6"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/main_img_detail_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/main_ico_close"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
