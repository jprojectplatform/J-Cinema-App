<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:binding="http://schemas.android.com/apk/res-auto"
    android:tag="layout/item_home_search_hot_search_0"
    android:paddingBottom="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_1">
    <com.mgs.carparking.background.StraightImageView
        android:id="@+id/item_img"
        android:tag="binding_1"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_50"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/item_img"
        android:layout_alignTop="@+id/item_img"
        android:layout_alignBottom="@+id/item_img">
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_999999"
            android:ellipsize="end"
            android:id="@+id/tv_book_name"
            android:tag="binding_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawablePadding="@dimen/dp_10"
            android:paddingEnd="30dp"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/color_666666"
            android:ellipsize="end"
            android:id="@+id/tv_desc"
            android:tag="binding_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:singleLine="true"
            android:layout_toRightOf="@+id/item_img"
            android:layout_below="@+id/ll_top"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@drawable/search_item_right_play_start"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
