<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_feedback_record_0"
    android:paddingBottom="@dimen/dp_17"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:tag="binding_1"
        android:background="@color/color_f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_666666"
        android:gravity="center"
        android:tag="binding_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"/>
    <RelativeLayout
        android:paddingRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7">
        <com.mgs.carparking.widgets.CircularImageView
            android:tag="binding_3"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_44"
            android:src="@drawable/ic_feedback_right"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            android:tag="binding_4"
            android:background="@drawable/bg_feedback_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_230"
            android:layout_toLeftOf="@+id/iv_right"
            android:lineSpacingExtra="5dp"
            android:textIsSelectable="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:tag="binding_5"
        android:paddingLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17">
        <ImageView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:src="@mipmap/ic_launcher_round"/>
        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@drawable/ic_feedback_left"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333333"
            android:tag="binding_6"
            android:background="@drawable/bg_feedback_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_230"
            android:layout_toRightOf="@+id/iv_left"
            android:lineSpacingExtra="5dp"
            android:textIsSelectable="true"/>
    </RelativeLayout>
</LinearLayout>
