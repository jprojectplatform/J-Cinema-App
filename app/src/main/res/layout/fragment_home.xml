<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_Home"
    android:tag="layout/fragment_home_0"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@drawable/bg_home_top_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-50dp"
        android:layout_alignBottom="@+id/rl_top"/>
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_9">
        <RelativeLayout
            android:id="@+id/rl_home_top_search"
            android:tag="binding_1"
            android:background="@drawable/shape_home_top_search"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_31"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_home_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_top_search"
                android:layout_centerVertical="true"/>
            <com.mgs.carparking.util.ScrollTextView
                android:id="@+id/marqueeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_toRightOf="@+id/iv_home_search"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_home_top_bg"
            android:gravity="center_vertical"
            android:tag="binding_2"
            android:background="@drawable/shape_home_top_search"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:visibility="gone"
            android:layout_width="@dimen/dp_242"
            android:layout_height="@dimen/dp_31"
            android:text="@string/text_home_search_content"
            android:drawableLeft="@drawable/ic_home_top_search"
            android:drawablePadding="@dimen/dp_13"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_download"
            android:tag="binding_3"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_margin="@dimen/dp_4"
            android:src="@drawable/ic_home_mine_download"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_look"
            android:tag="binding_4"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@drawable/ic_home_look_history"
            android:layout_toLeftOf="@+id/iv_download"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_home_filter"
            android:gravity="center"
            android:id="@+id/tv_filter"
            android:tag="binding_5"
            android:background="@drawable/shape_home_filter"
            android:paddingLeft="@dimen/dp_7"
            android:paddingRight="@dimen/dp_7"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_31"
            android:text="筛选"
            android:drawableLeft="@drawable/ic_home_filter1"
            android:drawablePadding="@dimen/dp_3"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_below="@+id/rl_top">
        <View
            android:tag="binding_6"
            android:background="@color/theme_bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.google.android.material.tabs.TabLayout
            android:layout_gravity="center"
            android:id="@+id/tab_layout"
            android:background="@null"
            android:paddingBottom="@dimen/dp_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            app:tabGravity="fill"
            app:tabMaxWidth="@dimen/dp_200"
            app:tabMinWidth="@dimen/dp_50"
            app:tabMode="scrollable"
            app:tabPaddingEnd="@dimen/dp_12"
            app:tabPaddingStart="@dimen/dp_12"
            app:tabRippleColor="@android:color/transparent"
            style="@style/Base.Widget.Design.TabLayout1"/>
        <com.mgs.carparking.glide.SuperViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/tab_layout"/>
        <RelativeLayout
            android:gravity="center"
            android:tag="binding_7"
            android:background="@color/theme_bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_42">
            <ImageView
                android:id="@+id/img_loading"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/ic_is_loading"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/text_is_load"
                android:layout_toRightOf="@+id/img_loading"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:tag="binding_8"
            android:background="@color/theme_bg_color"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:id="@+id/tv_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_150"
                android:text="@string/text_load_empty"
                android:drawableTop="@drawable/ic_load_empty"
                android:drawablePadding="@dimen/dp_33"
                android:layout_centerHorizontal="true"/>
            <Button
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_text_commen1"
                android:gravity="center"
                android:tag="binding_9"
                android:background="@drawable/bg_empty_refresh"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_31"
                android:layout_marginTop="@dimen/dp_19"
                android:text="@string/text_load_empty_word"
                android:layout_below="@+id/tv_empty"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
