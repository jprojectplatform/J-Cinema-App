<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_rank_content_multiple_next_0"
    android:background="@color/theme_bg_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_110">
        <com.mgs.carparking.background.RoundedImageView
            android:id="@+id/item_img"
            android:tag="binding_1"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_110"
            android:scaleType="centerCrop"/>
        <com.ruffian.library.widget.RTextView
            android:textSize="12sp"
            android:textColor="@color/black"
            android:tag="binding_2"
            android:paddingLeft="@dimen/dp_3"
            android:paddingTop="@dimen/dp_1"
            android:paddingRight="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingHorizontal="@dimen/dp_3"
            android:paddingVertical="@dimen/dp_1"
            app:background_normal="@color/color_37A0FC"/>
        <com.ruffian.library.widget.RTextView
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:tag="binding_3"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingHorizontal="3dp"
            android:paddingVertical="1dp"
            app:background_normal="@color/color_commen"
            app:corner_radius="2dp"/>
        <View
            android:background="@drawable/bg_item_shadow_top_gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:tag="binding_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_1"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_text_light_4"
        android:ellipsize="end"
        android:id="@+id/tv_name"
        android:tag="binding_5"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_13"
        android:maxLines="1"/>
</LinearLayout>
