<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_home_recommend_multiple_list_item_gusslike_horization_0"
    android:background="@color/theme_bg_color"
    android:paddingBottom="@dimen/dp_15"
    android:layout_width="@dimen/dp_106"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_6">
    <ImageView
        android:tag="binding_1"
        android:layout_width="@dimen/dp_106"
        android:layout_height="@dimen/dp_147"
        android:src="@drawable/ic_home_category_lookall"/>
    <RelativeLayout
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="@dimen/dp_106"
            android:layout_height="@dimen/dp_147">
            <com.mgs.carparking.background.RoundedImageView
                android:id="@+id/item_img"
                android:tag="binding_3"
                android:layout_width="@dimen/dp_106"
                android:layout_height="@dimen/dp_147"
                android:scaleType="centerCrop"/>
            <ImageView
                android:tag="binding_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
            <View
                android:tag="binding_5"
                android:background="@drawable/bg_item_shadow_top_gradient"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textStyle="bold"
                android:textColor="@color/color_0feb33"
                android:tag="binding_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="@color/white"
                android:tag="binding_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:tag="binding_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:maxLines="1"
            android:layout_below="@+id/rl_top"/>
    </RelativeLayout>
</LinearLayout>
