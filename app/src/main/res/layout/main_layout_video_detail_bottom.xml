<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout_bottom"
    android:background="@drawable/main_bg_video_detail_bottom"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="10dp">
    <TextView
        android:textSize="16sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/main_btn_download"
        android:background="@drawable/main_bg_download_radius"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="@string/main_downLoad"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/main_btn_download"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/main_img_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">
            <TextView
                android:textSize="17sp"
                android:textColor="#ff000000"
                android:id="@+id/main_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:textSize="14sp"
                android:textColor="#ff676767"
                android:ellipsize="marquee"
                android:id="@+id/main_txt_summary"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="10sp"
        android:textColor="#ff8e8d8d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_ad"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
