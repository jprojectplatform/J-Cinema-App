<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_rank_content_list_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlPrimaryColor="@color/color_commen">
        <com.mgs.carparking.widgets.WaterDropHeader
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:tag="binding_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    <RelativeLayout
        android:tag="binding_2"
        android:background="@color/theme_bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999999"
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_100"
            android:text="@string/text_load_empty"
            android:drawableTop="@drawable/ic_load_empty"
            android:drawablePadding="@dimen/dp_33"
            android:layout_centerHorizontal="true"/>
        <Button
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_text_commen1"
            android:gravity="center"
            android:tag="binding_3"
            android:background="@drawable/bg_empty_refresh"
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_19"
            android:text="@string/text_load_empty_word"
            android:layout_below="@+id/tv_empty"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:tag="binding_4"
        android:background="@color/theme_bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_loading"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/ic_is_loading"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/text_is_load"
            android:layout_toRightOf="@+id/img_loading"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:tag="binding_5"
        android:background="@color/theme_bg_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_empty"
            android:drawableTop="@drawable/ic_search_empty"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
