<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/ic_video_load_first_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/exo_exo_video_switch_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您需要观看一条广告后才能观影"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="11sp"
            android:textColor="#ff999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="广告是为了永久免费"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="12sp"
                android:textColor="@color/exo_exo_video_switch_selector"
                android:gravity="center"
                android:id="@+id/iv_ad_click_player"
                android:background="@drawable/bg_empty_refresh"
                android:layout_width="92dp"
                android:layout_height="32dp"
                android:text="观看广告"/>
            <Button
                android:textSize="12sp"
                android:textColor="#ff42bd56"
                android:gravity="center"
                android:id="@+id/iv_ad_share_click_player"
                android:background="@drawable/bg_ad_extension_share"
                android:layout_width="92dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:text="推广免广告"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
