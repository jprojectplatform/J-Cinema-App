<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/color_CC000000"
    android:paddingLeft="@dimen/dp_30"
    android:paddingRight="@dimen/dp_30"
    android:layout_width="@dimen/dp_248"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳过片头片尾"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_999999"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:text="设置后对本影片生效"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bottom_container"
        android:layout_width="@dimen/dp_202"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳过片头"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_999999"
                android:id="@+id/tv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="0"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="s"/>
        </LinearLayout>
        <SeekBar
            android:layout_gravity="center_vertical"
            android:id="@+id/seekBarHead"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/dp_8"
            android:max="180"
            android:progress="0"
            android:progressDrawable="@drawable/video_play_skip_progress_bar"
            android:minHeight="@dimen/dp_8"
            android:thumb="@drawable/ic_video_land_progress_circle"
            android:thumbOffset="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dp_202"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳过片尾"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_999999"
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="0"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="s"/>
        </LinearLayout>
        <SeekBar
            android:layout_gravity="center_vertical"
            android:id="@+id/seekBarEnd"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/dp_8"
            android:max="180"
            android:progress="0"
            android:progressDrawable="@drawable/video_play_skip_progress_bar"
            android:minHeight="@dimen/dp_8"
            android:thumb="@drawable/ic_video_land_progress_circle"
            android:thumbOffset="0dp"
            android:layout_weight="1"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="@dimen/dp_202"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40">
        <Button
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/btn_cancel"
            android:background="@drawable/shape_video_skip_cancle_click"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:text="@string/text_cannel"/>
        <Button
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:id="@+id/bt_sure"
            android:background="@drawable/shape_video_skip_submit_click"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:text="@string/text_sure"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
