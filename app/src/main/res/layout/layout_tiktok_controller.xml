<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/play_btn"
        android:background="@drawable/dkplayer_shape_play_bg"
        android:padding="@dimen/dkplayer_default_spacing"
        android:visibility="gone"
        android:layout_width="@dimen/dkplayer_play_btn_size"
        android:layout_height="@dimen/dkplayer_play_btn_size"
        android:src="@drawable/dkplayer_selector_play_button"/>
    <TextView
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:lineSpacingExtra="4dp"
        android:elevation="5dp"/>
    <SeekBar
        android:layout_gravity="bottom"
        android:id="@+id/seekBarVolume"
        android:background="@null"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="2dp"
        android:max="1000"
        android:progress="0"
        android:progressDrawable="@drawable/video_play_layer_progress_bar"
        android:minHeight="2dp"
        android:thumb="@null"
        android:thumbOffset="0dp"
        android:layout_weight="1"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"/>
    <RelativeLayout
        android:id="@+id/top_layout"
        android:paddingTop="@dimen/dp_50"
        android:paddingBottom="@dimen/dp_7"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_135"
            android:layout_marginLeft="@dimen/dp_12">
            <com.mgs.carparking.background.RoundedImageView
                android:id="@+id/item_img"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_135"
                android:src="@drawable/ic_video_default"
                android:scaleType="centerCrop"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textStyle="bold"
                android:textColor="@color/color_0feb33"
                android:id="@+id/item_pf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:textSize="@dimen/sp_9"
                android:textColor="@color/white_alpha80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_4"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_149"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_toRightOf="@+id/rl_left">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/white_alpha80"
                android:ellipsize="end"
                android:id="@+id/tv_vod_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:ellipsize="end"
                android:id="@+id/tv_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:maxLines="2"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_666666"
                android:ellipsize="end"
                android:id="@+id/tv_actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:maxLines="2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_999999"
                    android:ellipsize="end"
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_toLeftOf="@+id/tv_year"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/color_b0999999"
                    android:id="@+id/tv_year"
                    android:background="@drawable/bg_home_search_item_video_type"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_9"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_gravity="end|bottom"
        android:id="@+id/bt_skip"
        android:background="@drawable/bg_short_video_click"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp30"
        android:src="@drawable/dkplayer_selector_play_button"
        android:text="@string/click_check_video"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:paddingVertical="@dimen/dp_8"/>
    <ImageView
        android:layout_gravity="bottom"
        android:id="@+id/iv_loading"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="@dimen/dp_1"
        android:src="@drawable/ic_small_video_loading"
        android:scaleType="centerCrop"/>
</FrameLayout>
