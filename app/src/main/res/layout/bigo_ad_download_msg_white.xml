<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="30dp"
    android:scrollbars="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <RelativeLayout
        android:gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/star_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.5dp"
            android:layout_marginBottom="4dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="14sp"
                android:textColor="#ffffffff"
                android:ellipsize="end"
                android:id="@+id/star_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="4.7"
                android:textAlignment="center"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:background="@drawable/bigo_ad_ic_star_white"
                android:layout_width="14dp"
                android:layout_height="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/star_layout"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="12sp"
                android:textColor="#b2ffffff"
                android:ellipsize="end"
                android:id="@+id/commit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20M Reviews"
                android:textAlignment="center"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="#ffe7eaed"
        android:layout_width="1dp"
        android:layout_height="24dp"/>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/download_num_layout"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/download_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.5dp"
            android:layout_marginBottom="4dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="14sp"
                android:textColor="#ffffffff"
                android:ellipsize="end"
                android:id="@+id/download_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20M"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/download_layout"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="12sp"
                android:textColor="#b2ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bigo_ad_download_num_text"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="#ffe7eaed"
        android:layout_width="1dp"
        android:layout_height="24dp"/>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/everyone_layout"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/everyone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.5dp"
            android:layout_marginBottom="4dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="14sp"
                android:textColor="#ffffffff"
                android:ellipsize="end"
                android:background="@drawable/bigo_ad_ic_everyone_white"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/everyone_icon"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="12sp"
                android:textColor="#b2ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Everyone"/>
            <ImageView
                android:background="@drawable/bigo_ad_ic_info_white"
                android:padding="1dp"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
