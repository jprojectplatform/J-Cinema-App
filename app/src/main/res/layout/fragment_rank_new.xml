<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_rank_new_0"
    android:background="@color/theme_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_top"
        android:background="@drawable/bg_home_top_gradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_77"/>
    <TextView
        android:textSize="@dimen/sp_19"
        android:textStyle="bold"
        android:textColor="@color/color_text_light_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:text="Streaming"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_top">
        <com.google.android.material.tabs.TabLayout
            android:textSize="@dimen/sp_14"
            android:gravity="bottom"
            android:layout_gravity="center"
            android:id="@+id/tab_layout"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_6"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/color_text_light_5"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="@dimen/dp_1"
            app:tabMode="scrollable"
            app:tabPaddingEnd="@dimen/dp_12"
            app:tabPaddingStart="@dimen/dp_12"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/color_text_light_5"
            app:tabTextAppearance="@style/MyTextAppearance"
            app:tabTextColor="@color/color_white60"/>
        <View
            android:id="@+id/tabLine"
            android:background="@color/color_white60"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_3"
            android:layout_below="@+id/tab_layout"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRv"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_below="@+id/tab_layout"
            android:paddingHorizontal="12dp"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/mRv"/>
        <RelativeLayout
            android:tag="binding_1"
            android:background="@color/theme_bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:id="@+id/tv_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_150"
                android:text="@string/text_load_empty"
                android:drawableTop="@drawable/ic_load_empty"
                android:drawablePadding="@dimen/dp_33"
                android:layout_centerHorizontal="true"/>
            <Button
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_text_light_5"
                android:gravity="center"
                android:tag="binding_2"
                android:background="@drawable/bg_empty_refresh"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_31"
                android:layout_marginTop="@dimen/dp_19"
                android:text="@string/text_load_empty_word"
                android:layout_below="@+id/tv_empty"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:tag="binding_3"
            android:background="@color/theme_bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_45">
            <ImageView
                android:id="@+id/img_loading"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/ic_is_loading"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
