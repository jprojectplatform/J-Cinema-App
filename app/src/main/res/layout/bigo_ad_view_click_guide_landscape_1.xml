<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_click_guide"
    android:background="#cc000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/click_guide_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <sg.bigo.ads.common.view.RoundedFrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_centerHorizontal="true"
            app:radius="22dp">
            <ImageView
                android:id="@+id/inter_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        </sg.bigo.ads.common.view.RoundedFrameLayout>
        <sg.bigo.ads.common.view.RoundedFrameLayout
            android:id="@+id/inter_btn_cta_layout"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/icon_layout"
            android:layout_centerHorizontal="true"
            app:radius="8dp">
            <Button
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:id="@+id/inter_btn_cta"
                android:background="@drawable/bigo_ad_button_bg_rectangle_blue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/bigo_ad_cta_default"
                android:maxLines="1"
                android:textAllCaps="false"/>
        </sg.bigo.ads.common.view.RoundedFrameLayout>
    </RelativeLayout>
</RelativeLayout>
