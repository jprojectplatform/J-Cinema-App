<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/theme_bg_color"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_12"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_12"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_58">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_90"
        android:layout_centerVertical="true">
        <EditText
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_text_commen1"
            android:textColorHint="@color/color_999999"
            android:gravity="center_vertical"
            android:id="@+id/et_input"
            android:background="@drawable/bg_home_search_tv_set_num"
            android:paddingLeft="@dimen/dp_12"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:hint="@string/str_danmtips"
            android:maxLength="20"
            android:imeOptions="flagNoExtractUi"
            android:textCursorDrawable="@drawable/search_color_cursor"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999999"
            android:id="@+id/tv_et_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_11"
            android:text="20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <Button
        android:enabled="false"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_999999"
        android:gravity="center"
        android:id="@+id/bt_submit"
        android:background="@drawable/bg_video_comment_edit"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="@string/str_send_out"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textAllCaps="false"/>
</RelativeLayout>
