<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/activity_main_0"
    android:background="@color/theme_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/mFragmentContainerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_54"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:tag="binding_1"
        android:background="@drawable/bg_video_look_new"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_65"
        android:minHeight="@dimen/dp_36"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/iv_delete"
            android:tag="binding_2"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_video_close"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:tag="binding_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:maxLines="1"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/iv_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_commen"
            android:tag="binding_4"
            android:paddingTop="@dimen/dp_8"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_continue_look"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <View
        android:background="@color/color_ededed"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:layout_marginBottom="@dimen/dp_54"
        android:layout_alignParentBottom="true"/>
    <com.mgs.carparking.glide.TabLayout
        android:id="@+id/mTabLayout"
        android:background="@color/main_tab_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_alignParentBottom="true"/>
    <View
        android:tag="binding_5"
        android:background="@drawable/shape_message_oval"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
