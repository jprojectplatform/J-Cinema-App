<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content_material"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/main_img_gif_material"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"/>
    <com.yk.e.pl.OktVideoView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_material_player_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:screenScaleType="type_match_parent"/>
    <ImageView
        android:id="@+id/main_img_close"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/main_ico_close"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textSize="13sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/main_txt_cd"
        android:background="@drawable/main_bg_video_count"
        android:visibility="gone"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textSize="10sp"
        android:id="@+id/main_adtv_material"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_ad"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"/>
</RelativeLayout>
