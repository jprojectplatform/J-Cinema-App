<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/ll_click"
    android:background="@drawable/bg_vip_item_normal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_51"
    android:layout_marginBottom="@dimen/dp_9">
    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_vip_item_title"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:text="播放卡顿"
        android:layout_weight="1"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_vip_item_price_normal"
        android:id="@+id/tv_price_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_14"
        android:text="$0.8"/>
    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_vip_item_price"
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_14"
        android:text="$0.8"/>
    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_14"
        android:src="@drawable/ic_mine_history_unselector"/>
</LinearLayout>
