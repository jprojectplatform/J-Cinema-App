<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:orientation="vertical"
    android:id="@+id/rootActionBarView"
    android:background="#ffffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:contentInsetStart="0dp">
    <com.mgs.carparking.libutils.StatusBarHeightView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.Toolbar
        android:layout_gravity=""
        android:id="@+id/rootToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:id="@+id/rlBarBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.mgs.carparking.basecommon.VariedTextView
                android:textSize="30dp"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:id="@+id/leftButton"
                android:background="#ff000000"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/dp_18"
                android:text=" "
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                style="?android:attr/borderlessButtonStyle"/>
            <ImageView
                android:gravity="center"
                android:id="@+id/leftImage"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="18sp"
                android:textColor="#ff000000"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerInParent="true"/>
            <FrameLayout
                android:id="@+id/flRightButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <com.mgs.carparking.basecommon.VariedTextView
                    android:textSize="25dp"
                    android:textColor="#ff000000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/rightButton"
                    android:visibility="gone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#ff000000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/rightText"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </FrameLayout>
            <View
                android:id="@+id/dividerOther"
                android:background="@android:color/white"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>
