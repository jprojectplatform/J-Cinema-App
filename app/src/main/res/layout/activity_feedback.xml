<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/activity_feedback_0"
    android:background="@color/theme_bg_color"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/actionbar"
            layout="@layout/actionbar_back"/>
        <View
            android:tag="binding_2"
            android:background="@drawable/shape_message_oval"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollview"
        android:background="@color/color_f7f7f7"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/rl_top">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/color_333333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_23"
                android:layout_marginBottom="@dimen/dp_19"
                android:text="@string/text_mine_feedback_content_title"/>
            <androidx.recyclerview.widget.RecyclerView
                android:tag="binding_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_194"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_9">
                <EditText
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_666666"
                    android:gravity="start"
                    android:id="@+id/et_input"
                    android:background="@drawable/bg_mine_feedback_edit"
                    android:padding="@dimen/dp_14"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_204"
                    android:hint="@string/text_mine_feedback_edittext_hint"
                    android:maxLength="200"
                    android:textCursorDrawable="@drawable/feedback_edit_bg"/>
                <ImageView
                    android:id="@+id/iv_select"
                    android:tag="binding_4"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@drawable/ic_feedback_image_select"
                    android:layout_alignParentBottom="true"/>
                <RelativeLayout
                    android:tag="binding_5"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_alignParentBottom="true">
                    <ImageView
                        android:id="@+id/iv_image_select"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:src="@drawable/ic_feedback_image_select"
                        android:scaleType="fitXY"
                        android:layout_alignParentBottom="true"/>
                    <ImageView
                        android:id="@+id/iv_delete"
                        android:tag="binding_6"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/ic_feedback_image_del"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_999999"
                    android:tag="binding_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:tag="binding_8"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_9"/>
            <Button
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:tag="binding_9"
                android:background="@drawable/bg_mine_feedback_button"
                android:layout_width="@dimen/dp_308"
                android:layout_height="@dimen/dp_42"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/text_feedback_submit"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
