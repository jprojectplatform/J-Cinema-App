<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_feedback_close"
        android:layout_width="@dimen/dp_21"
        android:layout_height="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_125"
        android:layout_marginRight="@dimen/dp_45"
        android:src="@drawable/ic_close1"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_show_feedback_once"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:layout_width="@dimen/dp_268"
        android:layout_height="@dimen/dp_445"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/iv_feedback_close"
        android:layout_centerHorizontal="true">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_text_commen1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/text_mine_feedback"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="center"
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"/>
        <EditText
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999999"
            android:textColorHint="@color/color_999999"
            android:gravity="start"
            android:id="@+id/et_input"
            android:background="@drawable/bg_video_feedback_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:layout_marginTop="@dimen/dp_8"
            android:hint="@string/text_mine_feedback_tip"
            android:textCursorDrawable="@drawable/search_color_cursor"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="@color/color_text_commen1"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_feedback_submit"
            android:background="@drawable/bg_home_search_item_video_play"
            android:layout_width="@dimen/dp_174"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/text_feedback_submit"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
</RelativeLayout>
