<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/activity_download_video_play_0"
    android:background="@color/theme_bg_color"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <chuangyuan.ycj.videolibrary.widget.VideoPlayerView
        android:id="@+id/exo_play_context_id"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        app:auto_show="true"
        app:controller_layout_id="@layout/exo_playback_top_view_download_my"
        app:fastforward_increment="1000"
        app:player_ad_reward_layout_id="@layout/simple_exo_play_ad_reward_my"
        app:player_back_image="@drawable/icon_back"
        app:player_custom_layout_id="@layout/simple_exo_barrage_view"
        app:player_error_layout_id="@layout/simple_exo_play_error_my"
        app:player_fullscreen_image_selector="@drawable/ic_video_screen"
        app:player_gesture_audio_layout_id="@layout/simple_video_audio_audio_dialog_my"
        app:player_gesture_bright_layout_id="@layout/simple_video_audio_brghtness_dialog_my"
        app:player_gesture_longclick_layout_id="@layout/simple_video_fast_forward_dialog_my"
        app:player_gesture_progress_layout_id="@layout/simple_exo_video_progress_dialog"
        app:player_layout_id="@layout/simple_exo_view"
        app:player_list="true"
        app:player_load_first_id="@layout/simple_exo_play_load_first_my"
        app:player_load_layout_id="@layout/simple_exo_play_load_my"
        app:resize_mode="fit"
        app:rewind_increment="1000"
        app:show_timeout="100000"
        app:surface_type="surface_view"/>
</RelativeLayout>
