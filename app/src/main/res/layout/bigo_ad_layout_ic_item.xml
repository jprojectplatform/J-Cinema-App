<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/bigo_ad_ic_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="20dp">
        <TextView
            android:textSize="14sp"
            android:textColor="#ff202124"
            android:ellipsize="end"
            android:id="@+id/bigo_ad_ic_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.7"
            android:maxLines="1"
            android:textAlignment="center"
            android:layout_marginEnd="4dp"/>
        <ImageView
            android:id="@+id/bigo_ad_ic_title_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/bigo_ad_ic_recommend"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/bigo_ad_ic_desc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
        <TextView
            android:textSize="12sp"
            android:textColor="#ff65696d"
            android:ellipsize="end"
            android:id="@+id/bigo_ad_ic_desc_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20M Reviews"
            android:maxLines="1"/>
        <ImageView
            android:id="@+id/bigo_ad_ic_desc_iv"
            android:background="@drawable/bigo_ad_ic_info"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="2dp"/>
    </LinearLayout>
</LinearLayout>
